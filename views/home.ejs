<link rel="stylesheet" href="<%= assestPath('css/home.css') %>">
<link rel="stylesheet" href="<%= assestPath('css/chat_box.css') %>">

<h1>My Home</h1>


<div id="home-container">


    <% if(locals.user) {%>

    <section id="feed-posts">
    <h4>Posts</h4>
    <form id="new-post-form" method="post" action="/post/create"
    >
    <textarea name="content" id="" cols="30" rows="3" placeholder="type here..." required></textarea>
    <input type="submit" value="Post">
    </form>



    <div id="posts-list-container" >
    <ul>

    <% for (post of posts  ) {%>
      <%- include('_post') -%>
    <% } %>

    </ul>
    </div>

    </section>


    <section id="user-friends">
    <h4>Friends</h4>
    <% for (u of allUsers) {%>
    
    <p>
        <a href="/user/profile/<%= u._id %>"><%= u.name %></a>
    </p>
    
        <% } %>
      
        <% } %>


    </section>

<%- include('_chat_box') -%>    

</div>

<script src="<%= assestPath('js/home_posts.js') %>"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
<script src="<%= assestPath('js/chat_engine.js') %>"></script>


<% if(locals.user) {%>

<script>
new ChatEngine('user-chat-box',"<%= locals.user.email  %>")
</script>

<% } %>
